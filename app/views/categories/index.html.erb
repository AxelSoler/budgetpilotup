<div class="min-h-screen w-full p-6">
  <!-- Header -->
  <header class="flex flex-col sm:flex-row justify-between items-center mb-8">
    <h1 class="text-3xl font-extrabold text-blue-700 drop-shadow-sm">
      Categories
    </h1>

    <button 
      type="button" 
      onclick="document.getElementById('category-modal').classList.remove('hidden')" 
      class="mt-4 sm:mt-0 inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded-xl shadow transition cursor-pointer">
      New Category
    </button>
  </header>

  <!-- Show notice -->
  <% if notice %>
    <div id="notice-alert" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6 flex justify-between items-start" role="alert">
      <div>
        <strong class="font-bold">Notice:</strong>
        <span class="block sm:inline"><%= notice %></span>
      </div>
      <button 
        type="button" 
        onclick="document.getElementById('notice-alert').style.display='none'" 
        class="font-bold ml-4 focus:outline-none focus:shadow-outline cursor-pointer">
        âœ–
      </button>
    </div>
  <% end %>

  <!-- Categories List -->
  <div class="max-w-4xl mx-auto">
    <% if @categories.any? %>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @categories.each do |category| %>
          <div class="bg-white border border-blue-100 rounded-2xl shadow hover:shadow-lg transition p-5 flex flex-col justify-between">
            <!-- Content -->
            <h2 class="text-xl font-semibold text-blue-700 mb-2">
              <%= category.name %>
            </h2>

            <!-- Actions -->
            <div class="flex gap-2 mt-4">
              <button 
                type="button" 
                onclick="document.getElementById('edit-category-modal-<%= category.id %>').classList.remove('hidden')" 
                class="flex-1 text-center bg-yellow-400 hover:bg-yellow-500 text-white px-3 py-1.5 rounded-lg text-sm font-medium transition">
                Edit
              </button>
              <button 
                type="button" 
                onclick="document.getElementById('delete-category-modal-<%= category.id %>').classList.remove('hidden')" 
                class="flex-1 text-center bg-red-500 hover:bg-red-600 text-white px-3 py-1.5 rounded-lg text-sm font-medium transition">
                Delete
              </button>
            </div>
          </div>
          

          <!-- Edit Modal -->
          <div id="edit-category-modal-<%= category.id %>" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
            <div class="bg-white rounded-2xl shadow-lg max-w-md w-full p-6 relative">
              <button 
                type="button" 
                onclick="document.getElementById('edit-category-modal-<%= category.id %>').classList.add('hidden')" 
                class="absolute top-3 right-3 text-gray-500 hover:text-gray-800 cursor-pointer">
                âœ–
              </button>

              <h2 class="text-xl font-semibold text-blue-700 mb-4">Edit Category</h2>

              <%= render "form", category: category %>
            </div>
          </div>

          <!-- Delete Modal -->
          <div id="delete-category-modal-<%= category.id %>" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
            <div class="bg-white rounded-2xl shadow-lg max-w-md w-full p-6 relative">
              <button 
                type="button" 
                onclick="document.getElementById('delete-category-modal-<%= category.id %>').classList.add('hidden')" 
                class="absolute top-3 right-3 text-gray-500 hover:text-gray-800 cursor-pointer">
                âœ–
              </button>

              <h2 class="text-xl font-semibold text-red-600 mb-4">Delete Category</h2>
              <p class="text-gray-700 mb-6">Are you sure you want to delete "<strong><%= category.name %></strong>"? This action cannot be undone.</p>

              <div class="flex justify-end gap-2">
                <button 
                  type="button" 
                  onclick="document.getElementById('delete-category-modal-<%= category.id %>').classList.add('hidden')" 
                  class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-lg">
                  Cancel
                </button>

                <%= button_to 'Delete', category_path(category), method: :delete, form_class: "inline", class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg cursor-pointer" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center mt-10">No categories yet. Create one above ðŸ‘†</p>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div id="category-modal" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
  <div class="bg-white rounded-2xl shadow-lg max-w-md w-full p-6 relative">
    <button 
      type="button" 
      onclick="document.getElementById('category-modal').classList.add('hidden')" 
      class="absolute top-3 right-3 text-gray-500 hover:text-gray-800 cursor-pointer">
      âœ–
    </button>

    <h2 class="text-xl font-semibold text-blue-700 mb-4">New Category</h2>

    <%= render "form", category: Category.new %>
  </div>
</div>