<div class="min-h-screen w-full bg-gradient-to-b from-blue-50 to-blue-100 p-6">
  <!-- Header -->
  <header class="flex flex-col sm:flex-row justify-between items-center mb-8">
    <h1 class="text-3xl font-extrabold text-blue-700 drop-shadow-sm">
      Categories
    </h1>

    <button 
      type="button" 
      onclick="document.getElementById('category-modal').classList.remove('hidden')" 
      class="mt-4 sm:mt-0 inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded-xl shadow transition cursor-pointer">
      New Category
    </button>
  </header>

  <!-- Categories List -->
  <div class="max-w-4xl mx-auto">
    <% if @categories.any? %>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @categories.each do |category| %>
          <div class="bg-white border border-blue-100 rounded-2xl shadow hover:shadow-lg transition p-5 flex flex-col justify-between">
            <!-- Content -->
            <h2 class="text-xl font-semibold text-blue-700 mb-2">
              <%= category.name %>
            </h2>

            <!-- Actions -->
            <div class="flex gap-2 mt-4">
              <%= link_to 'Edit', edit_category_path(category),
                class: "flex-1 text-center bg-yellow-400 hover:bg-yellow-500 text-white px-3 py-1.5 rounded-lg text-sm font-medium transition" %>

              <%= link_to 'Delete', category_path(category), 
                method: :delete, 
                data: { confirm: 'Are you sure?' },
                class: "flex-1 text-center bg-red-500 hover:bg-red-600 text-white px-3 py-1.5 rounded-lg text-sm font-medium transition" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center mt-10">No categories yet. Create one above ðŸ‘†</p>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div id="category-modal" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
  <div class="bg-white rounded-2xl shadow-lg max-w-md w-full p-6 relative">
    <button 
      type="button" 
      onclick="document.getElementById('category-modal').classList.add('hidden')" 
      class="absolute top-3 right-3 text-gray-500 hover:text-gray-800 cursor-pointer">
      âœ–
    </button>

    <h2 class="text-xl font-semibold text-blue-700 mb-4">New Category</h2>

    <%= render "form", category: Category.new %>
  </div>
</div>