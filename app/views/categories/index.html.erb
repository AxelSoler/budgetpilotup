<div class="min-h-screen w-full lg:w-4/5 mx-auto p-6">
  <!-- Header -->
  <header class="flex flex-col sm:flex-row justify-between sm:justify-evenly items-center mb-8 border-b border-gray-300 pb-4">
    <h1 class="text-4xl font-extrabold text-gradient bg-gradient-to-r from-blue-600 to-indigo-500 bg-clip-text text-transparent drop-shadow-md">
      Categories
    </h1>

    <button 
      type="button" 
      onclick="document.getElementById('category-modal').classList.remove('hidden')" 
      class="mt-4 sm:mt-0 inline-block bg-gradient-to-r from-blue-600 to-indigo-500 hover:from-blue-700 hover:to-indigo-600 text-white font-semibold px-5 py-3 rounded-3xl shadow-lg transition transform hover:scale-105">
      New Category
    </button>
  </header>

  <!-- Show notice -->
  <% if notice %>
    <div id="notice-alert" class="bg-green-50 border border-green-200 text-green-700 px-5 py-3 rounded-2xl shadow-md mb-6 flex justify-between items-start transition-all animate-fadeIn" role="alert">
      <div>
        <strong class="font-semibold">Notice:</strong>
        <span class="block sm:inline"><%= notice %></span>
      </div>
      <button 
        type="button" 
        onclick="document.getElementById('notice-alert').style.display='none'" 
        class="font-bold ml-4 focus:outline-none focus:shadow-outline cursor-pointer">
        âœ–
      </button>
    </div>
  <% end %>

  <!-- Categories List -->
  <div class="max-w-6xl mx-auto">
    <% if @categories.any? %>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @categories.each do |category| %>
          <div class="bg-white rounded-3xl shadow-neumorph hover:shadow-neumorph-hover transition p-6 flex flex-col justify-between transform hover:-translate-y-1.5">
            <!-- Content -->
            <h2 class="text-xl font-semibold text-blue-700 mb-3 truncate">
              <%= category.name %>
            </h2>

            <!-- Actions -->
            <div class="flex gap-3 mt-4">
              <button 
                type="button" 
                onclick="document.getElementById('edit-category-modal-<%= category.id %>').classList.remove('hidden')" 
                class="flex-1 bg-yellow-400 hover:bg-yellow-500 text-white px-4 py-2 rounded-2xl font-medium transition transform hover:scale-105">
                Edit
              </button>
              <button 
                type="button" 
                onclick="document.getElementById('delete-category-modal-<%= category.id %>').classList.remove('hidden')" 
                class="flex-1 bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-2xl font-medium transition transform hover:scale-105">
                Delete
              </button>
            </div>
          </div>

          <!-- Edit Modal -->
          <div id="edit-category-modal-<%= category.id %>" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
            <div class="bg-white rounded-3xl shadow-2xl max-w-md w-full p-6 relative animate-fadeIn">
              <button 
                type="button" 
                onclick="document.getElementById('edit-category-modal-<%= category.id %>').classList.add('hidden')" 
                class="absolute top-3 right-3 text-gray-500 hover:text-gray-800 cursor-pointer">
                âœ–
              </button>

              <h2 class="text-xl font-semibold text-blue-700 mb-4">Edit Category</h2>
              <%= render "form", category: category %>
            </div>
          </div>

          <!-- Delete Modal -->
          <div id="delete-category-modal-<%= category.id %>" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
            <div class="bg-white rounded-3xl shadow-2xl max-w-md w-full p-6 relative animate-fadeIn">
              <button 
                type="button" 
                onclick="document.getElementById('delete-category-modal-<%= category.id %>').classList.add('hidden')" 
                class="absolute top-3 right-3 text-gray-500 hover:text-gray-800 cursor-pointer">
                âœ–
              </button>

              <h2 class="text-xl font-semibold text-red-600 mb-4">Delete Category</h2>
              <p class="text-gray-700 mb-6">Are you sure you want to delete "<strong><%= category.name %></strong>"? This action cannot be undone.</p>

              <div class="flex justify-end gap-3">
                <button 
                  type="button" 
                  onclick="document.getElementById('delete-category-modal-<%= category.id %>').classList.add('hidden')" 
                  class="px-5 py-2 bg-gray-200 hover:bg-gray-300 rounded-2xl transition">
                  Cancel
                </button>

                <%= button_to 'Delete', category_path(category), method: :delete, form_class: "inline", class: "px-5 py-2 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-2xl transition" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center mt-12 text-lg italic">No categories yet. Create one above ðŸ‘†</p>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div id="category-modal" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
  <div class="bg-white rounded-3xl shadow-2xl max-w-md w-full p-6 relative animate-fadeIn">
    <button 
      type="button" 
      onclick="document.getElementById('category-modal').classList.add('hidden')" 
      class="absolute top-3 right-3 text-gray-500 hover:text-gray-800 cursor-pointer">
      âœ–
    </button>

    <h2 class="text-xl font-semibold text-blue-700 mb-4">New Category</h2>
    <%= render "form", category: Category.new %>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }
  .animate-fadeIn {
    animation: fadeIn 0.25s ease-out forwards;
  }

  /* Neumorphism shadows */
  .shadow-neumorph {
    box-shadow: 8px 8px 15px rgba(0,0,0,0.05), -8px -8px 15px rgba(255,255,255,0.8);
  }
  .shadow-neumorph-hover {
    box-shadow: 4px 4px 20px rgba(0,0,0,0.1), -4px -4px 20px rgba(255,255,255,0.85);
  }

  /* Gradient text utility */
  .text-gradient {
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
  }
</style>
