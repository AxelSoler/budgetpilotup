<%= form_with(model: category, local: true, class: "space-y-4") do |form| %>
  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
  </div>

  <div class="flex justify-end gap-2">
    <button type="button" 
      onclick="this.closest('.fixed').classList.add('hidden')" 
      class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-lg">
      Cancel
    </button>
    <%= form.submit category.persisted? ? "Update" : "Create", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg cursor-pointer" %>
  </div>
<% end %>