<div class="min-h-screen p-6 w-full">
  <!-- Header -->
  <header class="text-center mb-4 md:mb-8">
    <h1 class="text-4xl font-extrabold drop-shadow-sm" style="color: var(--color-primary-700);">
      BudgetPilotUp
    </h1>
    <p class="mt-2 text-gray-700">Control your finances with clarity</p>
  </header>

  <!-- Balance Card -->
  <div class="max-w-lg mx-auto bg-white shadow-lg rounded-2xl p-6 mb-6 border" style="border-color: var(--color-primary-100);">
    <p class="text-gray-600 text-sm">Actual Balance</p>
    <p class="text-3xl font-bold" style="color: var(--color-primary-600);">
      <%= number_to_currency(@balance) %>
    </p>
  </div>

  <!-- Transactions Section -->
  <section class="max-w-3xl mx-auto mb-10">
    <div class="flex flex-col-reverse sm:flex-row gap-4 justify-between items-center mb-6">
      <h2 class="text-2xl font-semibold" style="color: var(--color-primary-700);">Last Transactions</h2>
      <%= link_to 'New Transaction', new_transaction_path, class: "inline-block text-white font-semibold px-4 py-2 rounded-xl shadow transition", style: "background-color: var(--color-primary-600);" %>
    </div>
    <div class="bg-white shadow-md rounded-xl overflow-hidden border" style="border-color: var(--color-primary-100);">
      <ul class="divide-y" style="border-color: var(--color-primary-50);">
        <% @transactions.each do |t| %>
          <li class="flex flex-col sm:flex-row justify-between items-start sm:items-center px-4 py-3 transition" style="background-color: var(--color-primary-50);">
            <!-- Left side -->
            <div>
              <p class="font-medium text-gray-800">
                <%= t.title %>
              </p>
              <p class="text-sm text-gray-500">
                <%= t.date.strftime("%b %d, %Y") %> Â· <span style="color: var(--color-primary-600);"><%= t.category.name %></span>
              </p>
            </div>

            <!-- Right side -->
            <div>
              <p class="<%= t.amount < 0 ? 'text-red-500' : 'text-green-600' %> font-semibold">
                <%= number_to_currency(t.amount) %>
              </p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </section>

  <!-- Charts grid -->
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
    <div class="bg-white shadow-md rounded-2xl p-6 border" style="border-color: var(--color-primary-100);">
      <h3 class="text-xl font-semibold mb-4" style="color: var(--color-primary-700);">Balance Over Time</h3>
      <div class="chart-wrapper h-[300px]">
        <%= line_chart @balance_over_time,
          xtitle: "Date",
          ytitle: "Amount",
          height: "100%",
          width: "100%",
          library: { responsive: true, maintainAspectRatio: false } %>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-2xl p-6 border" style="border-color: var(--color-primary-100);">
      <h3 class="text-xl font-semibold mb-4" style="color: var(--color-primary-700);">Income vs Expenses</h3>
      <div class="chart-wrapper h-[300px]">
        <%= pie_chart @kind_split, height: "100%", width: "100%" %>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-2xl p-6 border md:col-span-2 relative" style="border-color: var(--color-primary-100);">
      <h3 class="text-xl font-semibold mb-4" style="color: var(--color-primary-700);">Expenses by Category</h3>
      <div class="chart-wrapper h-[300px]">
        <%= bar_chart @expenses_by_category, 
              xtitle: "Category", ytitle: "Total Spent", height: "100%", width: "100%" %>
      </div>
    </div>
  </div>
</div>
