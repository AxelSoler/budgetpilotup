<div class="min-h-screen p-6 w-full">
  <!-- Header -->
  <header class="text-center mb-8">
    <h1 class="text-4xl font-extrabold text-blue-700 drop-shadow-sm">
      BudgetPilotUp
    </h1>
    <p class="mt-2 text-gray-600">Control your finances with clarity</p>
  </header>

  <!-- Balance Card -->
  <div class="max-w-lg mx-auto bg-white shadow-lg rounded-2xl p-6 mb-10 border border-blue-100">
    <p class="text-gray-600 text-sm">Actual Balance</p>
    <p class="text-3xl font-bold text-blue-600">
      <%= number_to_currency(@balance) %>
    </p>
  </div>

  <!-- Transactions Section -->
  <section class="max-w-3xl mx-auto mb-10">
    <div class="flex flex-col sm:flex-row justify-between items-center mb-6">
      <h2 class="text-2xl font-semibold text-blue-700 mb-4">Last Transactions</h2>
      <%= link_to 'New Transaction', new_transaction_path, class: "mt-2 sm:mt-0 inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded-xl shadow transition" %>
    </div>
    <div class="bg-white shadow-md rounded-xl overflow-hidden border border-blue-100">
      <ul class="divide-y divide-blue-50">
        <% @transactions.each do |t| %>
          <li class="flex flex-col sm:flex-row justify-between items-start sm:items-center px-4 py-3 hover:bg-blue-50 transition">
            <!-- Left side -->
            <div>
              <p class="font-medium text-gray-800">
                <%= t.title %>
              </p>
              <p class="text-sm text-gray-500">
                <%= t.date.strftime("%b %d, %Y") %> Â· <span class="text-blue-600"><%= t.category.name %></span>
              </p>
            </div>

            <!-- Right side -->
            <div>
              <p class="<%= t.amount < 0 ? 'text-red-500' : 'text-green-600' %> font-semibold">
                <%= number_to_currency(t.amount) %>
              </p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </section>

  <!-- Charts grid -->
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
    <div class="bg-white shadow-md rounded-2xl p-6 border border-blue-100">
      <h3 class="text-xl font-semibold text-blue-700 mb-4">Balance Over Time</h3>
      <div class="chart-wrapper h-[300px]">
        <%= line_chart @balance_over_time,
          xtitle: "Date",
          ytitle: "Amount",
          height: "100%",
          width: "100%",
          library: { responsive: true, maintainAspectRatio: false } %>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-2xl p-6 border border-blue-100">
      <h3 class="text-xl font-semibold text-blue-700 mb-4">Income vs Expenses</h3>
      <div class="chart-wrapper h-[300px]">
        <%= pie_chart @kind_split, height: "100%", width: "100%" %>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-2xl p-6 border border-blue-100 md:col-span-2 relative">
      <h3 class="text-xl font-semibold text-blue-700 mb-4">Expenses by Category</h3>
      <div class="chart-wrapper h-[300px]">
        <%= bar_chart @expenses_by_category, 
              xtitle: "Category", ytitle: "Total Spent", height: "100%", width: "100%" %>
      </div>
    </div>
  </div>
</div>
