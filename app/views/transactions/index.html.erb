<div class="min-h-screen w-full p-6">
  <!-- Header -->
  <header class="flex flex-col sm:flex-row justify-between items-center mb-8">
    <h1 class="text-3xl font-extrabold text-blue-700 drop-shadow-sm">
      Transactions
    </h1>

    <%= link_to 'New Transaction', new_transaction_path, class: "mt-4 sm:mt-0 inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded-xl shadow transition" %>
  </header>

  <!-- Show notice -->
  <% if notice %>
    <div id="notice-alert" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6 flex justify-between items-start" role="alert">
      <div>
        <strong class="font-bold">Notice:</strong>
        <span class="block sm:inline"><%= notice %></span>
      </div>
      <button 
        type="button" 
        onclick="document.getElementById('notice-alert').style.display='none'" 
        class="font-bold ml-4 focus:outline-none focus:shadow-outline cursor-pointer">
        âœ–
      </button>
    </div>
  <% end %>

  <!-- Transactions List -->
  <div class="max-w-4xl mx-auto">
    <% if @transactions.any? %>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @transactions.each do |transaction| %>
          <div class="bg-white border border-blue-100 rounded-2xl shadow hover:shadow-lg transition p-5 flex flex-col justify-between">
            <!-- Content -->
            <h2 class="text-xl font-semibold text-blue-700 mb-2">
              <%= transaction.title %>
            </h2>
            <p class="text-gray-600 mb-4">
              <strong>Amount:</strong> <%= number_to_currency(transaction.amount) %>
            </p>
            <p class="text-gray-500 mb-4">
              <strong>Description:</strong> <%= transaction.description %>
            </p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center mt-10">No transactions yet. Create one above ðŸ‘†</p>
    <% end %>
  </div>
</div>