<div class="min-h-screen w-full lg:w-4/5 mx-auto p-6 pt-16 md:pt-20">
  <header class="flex flex-col sm:flex-row justify-between sm:justify-evenly items-center mb-8 border-b border-gray-300 pb-4">
    <h1 class="text-4xl font-extrabold text-gradient bg-gradient-to-r from-blue-600 to-indigo-500 bg-clip-text text-transparent drop-shadow-md">
      Transactions
    </h1>

    <%= link_to 'New Transaction', new_transaction_path, class: "mt-4 sm:mt-0 inline-block bg-gradient-to-r from-blue-600 to-indigo-500 hover:from-blue-700 hover:to-indigo-600 text-white font-semibold px-5 py-3 rounded-3xl shadow-lg transition transform hover:scale-105" %>
  </header>

  <% if notice %>
    <div id="notice-alert" class="bg-green-50 border border-green-200 text-green-700 px-5 py-3 rounded-2xl shadow-md mb-6 flex justify-between items-start transition-all animate-fadeIn" role="alert">
      <div>
        <strong class="font-semibold">Notice:</strong>
        <span class="block sm:inline"><%= notice %></span>
      </div>
      <button 
        type="button" 
        onclick="document.getElementById('notice-alert').style.display='none'" 
        class="font-bold ml-4 focus:outline-none focus:shadow-outline cursor-pointer">
        âœ–
      </button>
    </div>
  <% end %>

  <div class="mx-auto">
    <% if @transactions.any? %>
      <div class="overflow-x-auto shadow-md rounded-lg">
        <table class="min-w-full bg-white">
          <thead class="bg-blue-600 text-white uppercase text-sm leading-normal">
            <tr>
              <th class="py-3 px-6 text-left">Title</th>
              <th class="py-3 px-6 text-left">Category</th>
              <th class="py-3 px-6 text-left">Amount</th>
              <th class="py-3 px-6 text-left">Kind</th>
              <th class="py-3 px-6 text-left">Description</th>
              <th class="py-3 px-6 text-left">Date</th>
              <th class="py-3 px-6 text-center">Actions</th>
            </tr>
          </thead>
          <tbody class="text-gray-600 text-sm font-light">
            <% @transactions.each do |transaction| %>
              <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="py-3 px-6 text-left whitespace-nowrap">
                  <div class="flex items-center">
                    <span class="font-medium"><%= transaction.title %></span>
                  </div>
                </td>
                <td class="py-3 px-6 text-left">
                  <span class="bg-gray-200 text-gray-600 py-1 px-3 rounded-full text-xs"><%= transaction.category.name %></span>
                </td>
                <td class="py-3 px-6 text-left">
                  <span class="<%= transaction.kind == 'income' ? 'text-green-500' : 'text-red-500' %> py-1 px-3 rounded-full text-xs"><%= number_to_currency(transaction.amount) %></span>
                </td>
                <td class="py-3 px-6 text-left">
                  <span class="<%= transaction.kind == 'income' ? 'bg-green-200 text-green-600' : 'bg-red-200 text-red-600' %> py-1 px-3 rounded-full text-xs"><%= transaction.kind.capitalize %></span>
                </td>
                <td class="py-3 px-6 text-left">
                  <span><%= truncate(transaction.description, length: 30) %></span>
                </td>
                <td class="py-3 px-6 text-left">
                  <span><%= transaction.date.strftime("%b %d, %Y") %></span>
                </td>
                <td class="py-3 px-6 text-center">
                  <div class="flex item-center justify-center">
                    <%= link_to 'Show', transaction, class: 'w-4 mr-2 transform hover:text-purple-500 hover:scale-110' %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center mt-12 text-lg italic">No transactions yet. Create one above ðŸ‘†</p>
    <% end %>
  </div>
</div>
