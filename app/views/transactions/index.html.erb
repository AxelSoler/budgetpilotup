<div class="min-h-screen w-full p-6">
  <header class="flex flex-col sm:flex-row justify-between sm:justify-evenly items-center mb-8 border-b border-gray-300 pb-4">
    <h1 class="text-4xl font-extrabold text-gradient bg-gradient-to-r from-blue-600 to-indigo-500 bg-clip-text text-transparent drop-shadow-md">
      Transactions
    </h1>

    <%= link_to 'New Transaction', new_transaction_path, class: "mt-4 sm:mt-0 inline-block bg-gradient-to-r from-blue-600 to-indigo-500 hover:from-blue-700 hover:to-indigo-600 text-white font-semibold px-5 py-3 rounded-3xl shadow-lg transition transform hover:scale-105" %>
  </header>

  <% if notice %>
    <div id="notice-alert" class="bg-green-50 border border-green-200 text-green-700 px-5 py-3 rounded-2xl shadow-md mb-6 flex justify-between items-start transition-all animate-fadeIn" role="alert">
      <div>
        <strong class="font-semibold">Notice:</strong>
        <span class="block sm:inline"><%= notice %></span>
      </div>
      <button 
        type="button" 
        onclick="document.getElementById('notice-alert').style.display='none'" 
        class="font-bold ml-4 focus:outline-none focus:shadow-outline cursor-pointer">
        âœ–
      </button>
    </div>
  <% end %>

  <div class="max-w-6xl mx-auto">
    <% if @transactions.any? %>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @transactions.each do |transaction| %>
          <div class="<%= transaction.kind == "income" ? 'bg-green-100 text-green-900' : 'bg-red-100 text-red-900' %> rounded-3xl shadow-neumorph hover:shadow-neumorph-hover transition p-6 flex flex-col justify-between transform hover:-translate-y-1.5">
            <h2 class="text-xl font-semibold mb-3 truncate">
              <%= transaction.title %>
            </h2>
            <p class="mb-3">
              <strong>Amount:</strong> <%= number_to_currency(transaction.amount) %>
            </p>
            <p class="mb-3 text-gray-700">
              <strong>Description:</strong> <%= transaction.description %>
            </p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center mt-12 text-lg italic">No transactions yet. Create one above ðŸ‘†</p>
    <% end %>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }
  .animate-fadeIn {
    animation: fadeIn 0.25s ease-out forwards;
  }

  /* Neumorphism shadows */
  .shadow-neumorph {
    box-shadow: 8px 8px 15px rgba(0,0,0,0.05), -8px -8px 15px rgba(255,255,255,0.8);
  }
  .shadow-neumorph-hover {
    box-shadow: 4px 4px 20px rgba(0,0,0,0.1), -4px -4px 20px rgba(255,255,255,0.85);
  }

  /* Gradient text utility */
  .text-gradient {
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
  }
</style>
