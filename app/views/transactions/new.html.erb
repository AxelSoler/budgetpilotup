<div class="min-h-screen p-6 flex flex-col items-center w-full pt-16 md:pt-20">
  <h1 class="text-3xl font-extrabold text-blue-700 mb-6 drop-shadow-sm">New Transaction</h1>

  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-6 border border-blue-100" id="form_autofill">
    <%= form_with(model: @transaction, local: true, class: "space-y-4") do |form| %>
      <% if @transaction.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg">
          <h2 class="font-semibold mb-2">
            <%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:
          </h2>
          <ul class="list-disc list-inside">
            <% @transaction.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, "Title", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :title,
          class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
      </div>

      <div>
        <%= form.label :kind, "Type", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :kind, Transaction.kinds.keys.map { |k| [k.titleize, k] }.reverse,
          {}, class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
      </div>

      <div>
        <%= form.label :amount, "Amount", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :amount, step: 0.01,
          class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
      </div>

      <div>
        <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :description,
          class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
      </div>

      <div>
        <%= form.label :category_id, "Category", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select" },
          class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Create", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow transition cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-6 border border-blue-100 mt-6">
    <h2 class="text-2xl font-bold text-blue-700 mb-4 drop-shadow-sm">Analyze with AI</h2>
    
    <%= form_with(url: categorize_with_ai_transactions_path, method: :post, class: "space-y-4") do |form| %>
      <div>
        <%= form.label :file, "Upload Image or PDF", class: "block text-sm font-medium text-gray-700" %>
        <%= form.file_field :file, accept: "image/*,application/pdf",
          class: "mt-1 block w-full text-sm text-gray-500
                  file:mr-4 file:py-2 file:px-4
                  file:rounded-lg file:border-0
                  file:text-sm file:font-semibold
                  file:bg-blue-50 file:text-blue-700
                  hover:file:bg-blue-100" %>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Analyze File",
          class: "w-full px-4 py-2 bg-blue-600 hover:bg-blue-700
                  text-white font-semibold rounded-lg shadow transition cursor-pointer",
          data: { disable_with: "Analyzing..." } %>
      </div>
    <% end %>

    <div id="ai_suggestions" class="mt-4">
      <%# Turbo Stream %>
    </div>
  </div>
</div>