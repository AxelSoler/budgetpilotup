<div class="mx-auto md:w-1/2 lg:w-1/3 w-full mt-28 px-6">
  <div class="bg-white/90 backdrop-blur-md p-8 rounded-2xl shadow-2xl border border-gray-200">
    
    <% if alert = flash[:alert] %>
      <p class="py-2 px-3 bg-red-50 mb-6 text-red-600 font-medium rounded-lg border border-red-200" id="alert"><%= alert %></p>
    <% end %>

    <h1 class="text-3xl font-extrabold text-gray-900 mb-2">Forgot your password?</h1>
    <p class="text-gray-500 mb-8 text-sm">
      Enter your email below and weâ€™ll send you a link to reset your password.
    </p>

    <%= form_with url: passwords_path, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "you@example.com",
              value: params[:email_address],
              class: "mt-2 block w-full rounded-lg border-gray-300 shadow-sm px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <%= form.submit "Send reset instructions",
            class: "w-full py-3 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold shadow-md transition-transform transform hover:scale-[1.02]" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      Remember your password?
      <%= link_to "Login", new_session_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
    </div>
  </div>
</div>
